<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.graphics.Color" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dinmakeev.tradingview.presentation.watchlist.WatchListItemViewModel" />

        <!--        <variable-->
        <!--            name="clickListener"-->
        <!--            type="com.dinmakeev.tradingview.presentation.watchlist.ItemListener" />-->
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.clicked()}"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic__google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#4477FF"
            android:visibility="@{(viewModel.trackItem.data.icon==null)?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{viewModel.trackItem.symbol}"
            android:textColor="?colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            app:layout_constraintTop_toTopOf="@+id/imageViewLogo"
            tools:text="AAPL" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:indeterminateTint="#4477FF"
            android:visibility="@{(viewModel.trackItem.data.description==null)?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{viewModel.trackItem.data.description}"
            android:textColor="?subtitleTextColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLogo"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            tools:text="Sample description" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.trackItem.priceOrEmpty}"
            android:textColor="?colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewLogo"
            tools:text="100.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="@{viewModel.trackItem.changeToString()}"
            android:textColor='@{(viewModel.trackItem.isPositive()==true)?Color.parseColor("#009688"):Color.parseColor("#F44336")}'
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLogo"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            tools:text="+5.0%"
            tools:textColor="#37A173" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.trackItem.percentChangeToString()}"
            android:textColor='@{(viewModel.trackItem.isPositive()==true)?Color.parseColor("#009688"):Color.parseColor("#F44336")}'
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLogo"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="+5.0"
            tools:textColor="#37A173" />


        <ProgressBar
            android:id="@+id/progressBar3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:indeterminateTint="#4477FF"
            android:visibility="@{(viewModel.trackItem.data.price==null)?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

