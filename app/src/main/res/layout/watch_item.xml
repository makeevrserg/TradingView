<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.graphics.Color" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dinmakeev.tradingview.presentation.watchlist.WatchListItemViewModel" />

        <!--        <variable-->
        <!--            name="clickListener"-->
        <!--            type="com.dinmakeev.tradingview.presentation.watchlist.ItemListener" />-->
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.clicked()}">

        <View
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            app:layout_constraintTop_toBottomOf="@id/textView2" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_circle"
            android:translationZ="-10dp"
            android:visibility="@{(viewModel.trackItem.data.bitmap!=null)?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:bitmap="@{viewModel.trackItem.data.bitmap}"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:indeterminateTint="#4477FF"
            android:translationZ="-10dp"
            android:visibility="@{(viewModel.trackItem.data.bitmap==null)?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="@+id/imageViewLogo"
            app:layout_constraintTop_toTopOf="@+id/imageViewLogo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:text="@{viewModel.trackItem.symbol}"
            android:textColor="?colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="AAPL" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:indeterminateTint="#4477FF"
            android:translationZ="-10dp"
            android:visibility="@{(viewModel.trackItem.data.description==null)?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@{viewModel.trackItem.data.description}"
            android:textColor="?subtitleTextColor"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:text="Sample description" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@{viewModel.trackItem.priceOrEmpty}"
            android:textColor="?colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="155.08" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:text="@{viewModel.trackItem.changeAndPercentToString()}"
            android:textColor='@{(viewModel.trackItem.isPositive()==true)?Color.parseColor("#009688"):Color.parseColor("#F44336")}'
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:text="+1.02 +0.67%"
            tools:textColor="#009688" />


        <ProgressBar
            android:id="@+id/progressBar3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:indeterminateTint="#4477FF"
            android:translationZ="-10dp"
            android:visibility="@{(viewModel.trackItem.data.price==null)?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewLogo"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

